<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/main_list_item_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"></ImageView>
        <TextView
                android:textColor="#000"
                android:textSize="14dp"
                android:id="@+id/main_list_item_username"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/hello_world"></TextView>
        <TextView
                android:textSize="12dp"
                android:id="@+id/main_list_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hello_world"
                android:layout_gravity="right"
                android:paddingRight="20dp"></TextView>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:textColor="#000"
                android:textSize="17dp"
                android:padding="10dp"
                android:id="@+id/main_list_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hello_world"
                android:layout_gravity="left"/>
        <TextView
                android:textColor="#000"
                android:layout_margin="20dp"
                android:background="#DCDCDC"
                android:textSize="17dp"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_list_item_source"
                android:layout_gravity="center"></TextView>
    </LinearLayout>

</LinearLayout>